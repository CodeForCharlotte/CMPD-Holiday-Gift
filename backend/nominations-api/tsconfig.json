{
  "compilerOptions": {
    "outDir": "../build",
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",

    "noLib": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2016"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
